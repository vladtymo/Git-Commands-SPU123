<Window x:Class="git_commands.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:git_commands"
        mc:Ignorable="d"
        Title="MainWindow" Height="328" Width="590">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="DarkRed"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>
    <DockPanel>
        <TextBlock Margin="10" TextAlignment="Center" FontSize="32" FontWeight="Bold" DockPanel.Dock="Top">Git Commands Refereneces</TextBlock>

        <WrapPanel Margin="10">
            <Button Click="CloneCommandBtnClick">Clone</Button>
            <Button Click="ConfigCommandBtnClick">Config</Button>
            <Button Click="BranchCommandButton_Click">Branch</Button>
        </WrapPanel>
    </DockPanel>
</Window>
